<div class="newMain">

  <h1 class="newTitle"> Edit the photo in the gallery </h1>

  <form class="newForm" method="POST" action="/gallery/{{id}}?_method=PUT" enctype="application/x-www-form-urlencoded">

    <ol>
      <li> Author:        <input name="author" type="textbox" value="{{author}}"> </li>
      <li> Link:          <input name="link" type="textbox" value="{{link}}"> </li>
      <li> Description:   <input name="description" type="textbox" value="{{description}}"> </li>
    </ol>

    <button class="button" type="submit"> EDIT </button>

  </form>

  <form method="POST" action="/gallery/{{id}}?_method=DELETE" enctype="application/x-www-form-urlencoded">

    <button class="button2" type="submit"> DELETE </button>

  </form>

</div>


